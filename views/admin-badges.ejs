<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Badges</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            text-align: center;
            padding: 10px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }

        img {
            max-width: 50px;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #a71d2a;
        }
    </style>
</head>
<body>
    <h1>Manage Badges</h1>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Range</th>
                <th>Min Bitpoints</th>
                <th>Max Bitpoints</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% badges.forEach(badge => { %>
            <tr>
                <td><img src="/badges/<%= badge.png %>" alt="<%= badge.rango %>"></td>
                <td><%= badge.rango %></td>
                <td><%= badge.rango %></td>
                <td><%= badge.bitpoints_min %></td>
                <td><%= badge.bitpoints_max %> </td>
                <td>
                    <a href="/admin/badges/edit/<%= badge._id %>" class="btn btn-primary">Edit</a>
                    <form action="/admin/badges/delete/<%= badge._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/admin/dashboard" class="btn btn-primary">Back to Dashboard</a>
</body>
</html>
