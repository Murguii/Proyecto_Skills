<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Insignias</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        img {
            max-width: 50px;
            max-height: 50px;
        }
        .actions button {
            margin: 0 5px;
        }
    </style>
</head>
<body>
    <h1>Lista de Insignias</h1>
    <a href="/admin/dashboard">Regresar al Dashboard</a>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Rango</th>
                <th>Puntos Mínimos</th>
                <th>Puntos Máximos</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (badges.length === 0) { %>
                <tr>
                    <td colspan="6" style="text-align: center;">No hay insignias disponibles</td>
                </tr>
            <% } else { %>
                <% badges.forEach(badge => { %>
                    <tr>
                        <td><%= badge.name %></td>
                        <td><%= badge.range %></td>
                        <td><%= badge.bitpoints_min %></td>
                        <td><%= badge.bitpoints_max || 'N/A' %></td>
                        <td>
                            <img src="<%= badge.image_url %>" alt="<%= badge.name %>">
                        </td>
                        <td class="actions">
                            <!-- Botón para editar -->
                            <a href="/admin/badges/edit/<%= badge._id %>">
                                <button type="button">Editar</button>
                            </a>
                            <!-- Botón para eliminar -->
                            <form action="/admin/badges/delete/<%= badge._id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('¿Estás seguro de eliminar esta insignia?')">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</body>
</html>

